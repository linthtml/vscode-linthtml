{
  "name": "vscode-linthtml",
  "displayName": "LintHTML",
  "description": "Bring LintHTML errors into vscode",
  "author": "Benjamin JEGARD",
  "publisher": "kamikillerto",
  "license": "Apache License 2.0",
  "version": "0.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/linthtml/vscode-linthtml"
  },
  "bugs": {
    "url": "https://github.com/kamikillerto/linthtml-linthtml/issues"
  },
  "homepage": "https://github.com/kamikillerto/linthtml-linthtml/blob/master/README.MD",
  "galleryBanner": {
    "theme": "light"
  },
  "icon": "logo.png",
  "categories": [
    "Linters"
  ],
  "keywords": [
    "linter",
    "lint",
    "html",
    "linthtml",
    "validation"
  ],
  "engines": {
    "vscode": "^1.29.0"
  },
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "LintHTML",
      "properties": {
        "linthtml.enable": {
          "type": "boolean",
          "default": true,
          "description": "Control whether linthtml is enabled or not."
        },
        "linthtml.configFile": {
          "type": "string",
          "default": null,
          "description": "Path to the LintHTML's config file to use."
        },
        "linthtml.packageManager": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "The package manager you use to install node modules."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "lint": "node_modules/.bin/tslint -c tslint.json {server,client}/src/**/*.ts --format codeFrame"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^14.0.9",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  }
}
